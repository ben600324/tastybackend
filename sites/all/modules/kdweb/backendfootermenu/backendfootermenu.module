<?php

function backendfootermenu_init() {
  drupal_add_js(drupal_get_path('module', 'backendfootermenu') . '/js/script.js');
  drupal_add_css(drupal_get_path('module', 'backendfootermenu') . '/css/crm_addition.css');
  drupal_add_js(drupal_get_path('module', 'backendfootermenu') . '/js/jquery-1.11.1.js');
  drupal_add_js(drupal_get_path('module', 'backendfootermenu') . '/js/slidx.js');
  drupal_add_js(drupal_get_path('module', 'backendfootermenu') . '/js/noconflict-1.11.1.js'); 
}

function backendfootermenu_permission() {
  return array(
    'access quick add menu' => array(
      'title' => t('Access Quick Add Menu'),
    ),
  );
}

